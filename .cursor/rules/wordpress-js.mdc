globs: *.js,*.ts
alwaysApply: false
---
Description: Javascript coding standards (syntax, formatting, conventions).
wordpress_js_standard:
  whitespace:
    indent: "tabs"
    max_line: 100
    trailing_space: false
    brace_style: "always_multi_line"
    space_after_unary_not: true
    comma_space_before: false
    semicolon_space_before: false
    colon_space_before: false
    ternary_spacing: "both"
    empty_construct_space: false
    eof_newline: true
  semicolons: "required"
  wrapping:
    operator_break: "after"
    boolean_operand_lines: true
    chained_calls_newline: true
  variables:
    es2015: { prefer: "const", reassign: "let" }
    es5_var_style: "single_declaration"
  globals:
    doc_tag: "/* global */"
    allowed: ["wp","jQuery","Backbone","_"]
  naming:
    variable: "camel"
    function: "camel"
    class: "upper_camel"
    constant: "screaming_snake"
    acronym_handling: "preserve_caps"
  comments:
    style: "// Sentence."
    jsdoc: "/** */"
  language:
    equality: "strict"
    string_quotes: "single"
    switch_case_indent: true
    array_object_style: "literal"
    iteration_pref: "underscore"
    jquery_each_only: true
  tooling:
    jshint_required: true
    ignore_blocks: true
  resources:
    official: [@https://developer.wordpress.org/coding-standards/wordpress-coding-standards/javascript/]