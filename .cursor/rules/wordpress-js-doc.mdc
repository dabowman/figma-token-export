globs: *.js,*.ts
alwaysApply: false
---
Description: Inline documentation standards for JS code.
wordpress_jsdoc_standard:
  must_document:
    - functions
    - class_methods
    - backbone_classes
    - objects_properties
    - closures
    - events
    - file_headers
  style:
    summary:
      one_sentence: true
      no_markup: true
      period_end: true
    description_markdown_allowed: true
    wrap:
      soft: 80
      hard: 120
    oxford_comma: true
    voice: "third_person_singular"
  tags:
    required_per_function: ["since","param","return"]
    version_pattern: "\\d+\\.\\d+\\.\\d+"
    deprecated_pattern: "@deprecated {ver} Use {alt} instead."
    supported: "JSDoc3_core_minus_synonyms"
    forbidden_synonyms: ["summary","virtual","constructor","returns","arg","prop","var"]
  formatting:
    align_columns: true
    no_html_in_param_return: true
    no_refactor_on_doc_change: true
  patterns:
    backbone_lends: true
    local_fn_alias: true
    namespace_blocks: true
  inline_comments:
    single_line: "//"
    multi_line: "/* */ (not /**)"
  file_header:
    include_jshint: true
  resources:
    official: [@https://developer.wordpress.org/coding-standards/inline-documentation-standards/javascript/]
