{
  "name": "figma-token-export",
  "version": "1.0.0",
  "description": "Figma plugin to export variables as design tokens",
  "type": "module",
  "main": "code.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run bundle",
    "build:tokens": "style-dictionary build --config config.json",
    "start": "tsc -p tsconfig.json --watch",
    "bundle": "rollup -c",
    "dev": "concurrently \"npm run watch\" \"rollup -c -w\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.109.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "concurrently": "^8.2.2",
    "rollup": "^4.9.5",
    "style-dictionary": "^4.4.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "figma-plugin-ds": "^1.0.1"
  }
}
