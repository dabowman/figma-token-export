{
  "fontFamily": {
    "primary": {
      "$type": "fontFamily",
      "$value": "Inter, sans-serif",
      "$description": "Primary font family"
    },
    "secondary": {
      "$type": "fontFamily",
      "$value": "Georgia, serif",
      "$description": "Secondary font family"
    }
  },
  "fontSize": {
    "xs": {
      "$type": "dimension",
      "$value": {
        "value": 12,
        "unit": "px"
      },
      "$description": "Extra small text"
    },
    "sm": {
      "$type": "dimension",
      "$value": {
        "value": 14,
        "unit": "px"
      },
      "$description": "Small text"
    },
    "md": {
      "$type": "dimension",
      "$value": {
        "value": 16,
        "unit": "px"
      },
      "$description": "Medium text"
    },
    "lg": {
      "$type": "dimension",
      "$value": {
        "value": 20,
        "unit": "px"
      },
      "$description": "Large text"
    },
    "xl": {
      "$type": "dimension",
      "$value": {
        "value": 24,
        "unit": "px"
      },
      "$description": "Extra large text"
    },
    "2xl": {
      "$type": "dimension",
      "$value": {
        "value": 32,
        "unit": "px"
      },
      "$description": "2x large text"
    }
  },
  "fontWeight": {
    "regular": {
      "$type": "fontWeight",
      "$value": "400",
      "$description": "Regular font weight"
    },
    "medium": {
      "$type": "fontWeight",
      "$value": "500",
      "$description": "Medium font weight"
    },
    "bold": {
      "$type": "fontWeight",
      "$value": "700",
      "$description": "Bold font weight"
    }
  },
  "lineHeight": {
    "tight": {
      "$type": "dimension",
      "$value": {
        "value": 1.2,
        "unit": ""
      },
      "$description": "Tight line height"
    },
    "normal": {
      "$type": "dimension",
      "$value": {
        "value": 1.5,
        "unit": ""
      },
      "$description": "Normal line height"
    },
    "loose": {
      "$type": "dimension",
      "$value": {
        "value": 1.8,
        "unit": ""
      },
      "$description": "Loose line height"
    }
  },
  "styles": {
    "heading": {
      "h1": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, sans-serif",
          "fontSize": {
            "value": 32,
            "unit": "px"
          },
          "fontWeight": "700",
          "lineHeight": {
            "value": 1.2,
            "unit": ""
          },
          "letterSpacing": {
            "value": -0.5,
            "unit": "px"
          }
        },
        "$description": "Heading 1 style"
      },
      "h2": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, sans-serif",
          "fontSize": {
            "value": 24,
            "unit": "px"
          },
          "fontWeight": "700",
          "lineHeight": {
            "value": 1.2,
            "unit": ""
          },
          "letterSpacing": {
            "value": -0.25,
            "unit": "px"
          }
        },
        "$description": "Heading 2 style"
      },
      "h3": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, sans-serif",
          "fontSize": {
            "value": 20,
            "unit": "px"
          },
          "fontWeight": "700",
          "lineHeight": {
            "value": 1.3,
            "unit": ""
          },
          "letterSpacing": {
            "value": 0,
            "unit": "px"
          }
        },
        "$description": "Heading 3 style"
      }
    },
    "body": {
      "regular": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, sans-serif",
          "fontSize": {
            "value": 16,
            "unit": "px"
          },
          "fontWeight": "400",
          "lineHeight": {
            "value": 1.5,
            "unit": ""
          },
          "letterSpacing": {
            "value": 0,
            "unit": "px"
          }
        },
        "$description": "Regular body text style"
      },
      "small": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, sans-serif",
          "fontSize": {
            "value": 14,
            "unit": "px"
          },
          "fontWeight": "400",
          "lineHeight": {
            "value": 1.4,
            "unit": ""
          },
          "letterSpacing": {
            "value": 0,
            "unit": "px"
          }
        },
        "$description": "Small body text style"
      }
    }
  }
}
